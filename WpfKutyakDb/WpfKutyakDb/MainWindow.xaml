        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKutyakDb"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="datagridKutyafajtak" ColumnWidth="*" />
        <Button x:Name="buttonUjKutyafajta" Content="Új kutyafajta" Grid.Row="1" Click="buttonUjKutyafajta_Click" />
    </Grid>
</Window>
