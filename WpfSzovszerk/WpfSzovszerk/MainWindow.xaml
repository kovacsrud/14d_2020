<Window x:Class="WpfSzovszerk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSzovszerk"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <WrapPanel>
            <Button x:Name="buttonBetolt" Content="Megnyitás" Margin="10" Click="buttonBetolt_Click" />
            <Button x:Name="buttonMentes" Content="Mentés" Margin="10" Click="buttonMentes_Click" />
        </WrapPanel>
        <TextBox x:Name="szoveg" AcceptsReturn="True" AcceptsTab="True" MinLines="30" VerticalScrollBarVisibility="Auto" Grid.Row="1"/>
    </Grid>
</Window>
