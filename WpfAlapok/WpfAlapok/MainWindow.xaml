<Window x:Class="WpfAlapok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAlapok"
        mc:Ignorable="d"
        Title="Wpf próba" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Label Content="A értéke:" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="B értéke:" Grid.Row="1" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="textboxA" Grid.Column="1" FontSize="30" Width="100" Height="36"/>
        <TextBox x:Name="textboxB" Grid.Column="1" Grid.Row="1" FontSize="30" Width="100" Height="36"/>
        <Button x:Name="buttonSzamol" Width="150" MaxHeight="50" Content="Számolj!" FontSize="30" Grid.Row="2" Grid.ColumnSpan="2" />
    </Grid>
</Window>
