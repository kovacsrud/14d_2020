<Window x:Class="WpfCimkek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCimkek"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBoxDarab" FontSize="25" Width="100" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <Button x:Name="buttonLetrehoz" Content="Létrehozás" Margin="20" FontSize="16" Grid.Column="1" />
        <WrapPanel x:Name="elemek" Grid.Row="1" Grid.ColumnSpan="2">
            
        </WrapPanel>
    </Grid>
</Window>
